# general
ctrl + alt + cmd - r : yabai --restart-service

# window focus
shift + alt - i : yabai -m window --focus north
shift + alt - j : yabai -m window --focus west
shift + alt - l : yabai -m window --focus east
shift + alt - k : yabai -m window --focus south
shift + alt - 1 : yabai -m window --focus next || yabai -m window --focus first
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# window warp
ctrl + alt - w: yabai -m window --warp north
ctrl + alt - a: yabai -m window --warp west
ctrl + alt - s: yabai -m window --warp south
ctrl + alt - d: yabai -m window --warp east
ctrl + alt - e: yabai -m window --toggle split

# increase window size
shift + alt - w : yabai -m window --resize top:0:-20
shift + alt - a : yabai -m window --resize left:-20:0
shift + alt - s : yabai -m window --resize bottom:0:20
shift + alt - d : yabai -m window --resize right:20:0

# decrease window size
shift + cmd - w : yabai -m window --resize top:0:20
shift + cmd - a : yabai -m window --resize left:20:0
shift + cmd - s : yabai -m window --resize bottom:0:-20
shift + cmd - d : yabai -m window --resize right:-20:0

# move window around in space (flip and balance size)
shift + alt - v : yabai -m space --mirror x-axis
shift + alt - h : yabai -m space --mirror y-axis
shift + alt - b : yabai -m space --balance
